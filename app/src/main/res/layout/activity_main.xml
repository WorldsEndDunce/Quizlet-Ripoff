<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:gravity="center"
        android:text="What is my favorite color?"
        android:padding="20dp"
        android:textSize="40sp"></TextView>

    <TextView
        android:id="@+id/flashcard_option1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:background="#FFBB86FC"
        android:foregroundGravity="center"
        android:gravity="center_horizontal"
        android:text="Pink"
        android:textSize="40sp"
        android:visibility="invisible"></TextView>
    <TextView
        android:id="@+id/flashcard_answer"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#FFBB86FC"
        android:gravity="center_horizontal"
        android:foregroundGravity="center"
        android:text="Orange"
        android:textSize="40sp"></TextView>

    <TextView
        android:id="@+id/flashcard_option2"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#FFBB86FC"
        android:gravity="center_horizontal"
        android:foregroundGravity="center"
        android:text="Blue"
        android:textSize="40sp"></TextView>

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/hiddeneye" />

    <ImageView
        android:id="@+id/add_card"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_plus" />
    <ImageView
        android:id="@+id/edit_card"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_edit" />
</RelativeLayout>