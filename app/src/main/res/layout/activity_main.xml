<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:gravity="center"
        android:text="What is my favorite color?"
        android:padding="20dp"
        android:textSize="40sp"></TextView>
    <TextView
        android:id="@+id/flashcard_option1"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#FFBB86FC"
        android:gravity="center_horizontal"
        android:foregroundGravity="center"
        android:text="Pink"
        android:textSize="40sp"></TextView>
    <TextView
        android:id="@+id/flashcard_answer"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/flashcard_option1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#FFBB86FC"
        android:gravity="center_horizontal"
        android:foregroundGravity="center"
        android:text="Orange"
        android:textSize="40sp"></TextView>

    <TextView
        android:id="@+id/flashcard_option2"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/flashcard_answer"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#FFBB86FC"
        android:gravity="center_horizontal"
        android:foregroundGravity="center"
        android:text="Blue"
        android:textSize="40sp"></TextView>

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/hiddeneye"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>